/ {
    chosen { zmk,matrix-transform = &imprint_function_row; };

    combos {
        compatible = "zmk,combos";

        to-colemakdh {
            bindings = <&to 1>;
            key-positions = <60 63>;
            layers = <0>;
        };

        to-qwerty {
            bindings = <&to 0>;
            key-positions = <60 63>;
            layers = <1 4>;
        };

        capslock {
            bindings = <&kp CAPSLOCK>;
            key-positions = <71 74>;
            layers = <0 1>;
        };

        Delete {
            bindings = <&kp DELETE>;
            key-positions = <70 75>;
            layers = <0 1>;
        };

        Insert {
            bindings = <&kp INSERT>;
            key-positions = <72 73>;
            layers = <0 1>;
        };

        toKeyboardControl {
            bindings = <&to 4>;
            key-positions = <61 62>;
            layers = <0 1>;
